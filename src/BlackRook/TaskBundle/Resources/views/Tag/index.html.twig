{% extends 'BlackRookTaskBundle::layout.html.twig' %}
{% block body %}
<h1>Tags  <small>&mdash; <a href="{{ path('tag_new') }}">Create</a></small></h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.type }}</td>
            <td><a href="{{ path('tag_edit', { 'id': entity.id }) }}">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock body %}