{% extends 'BlackRookTaskBundle::layout.html.twig' %}
{% block body %}
<h1>Tag <small>&mdash; <a href="{{ path('tag_edit', { 'id': entity.id }) }}">Edit</a></small></h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
    </tbody>
</table>

<form class="delete" action="{{ path('tag_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
     <button type="submit">Delete Report</button>
</form>

{% endblock body %}