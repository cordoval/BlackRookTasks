{% extends 'BlackRookTaskBundle::layout.html.twig' %}

{% block body %}

<h1>Task edit</h1>

<form class="entity" action="{{ path('put_task', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
    {{ form_errors(edit_form) }}
    {{ form_rest(edit_form) }}
    <div class="actions">
        <button type="submit" class="btn primary">Edit</button>
    </div>
</form>

{% endblock body %}