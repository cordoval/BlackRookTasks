{% extends 'BlackRookTaskBundle::layout.html.twig' %}
{% block body %}

<h1>Project <small>&mdash; <a href="{{ path('project_edit', { 'id': entity.id }) }}">Edit</a></small></h1>
<table>
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>{{ entity.name }}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{ entity.description }}</td>
    </tr>
</table>

<h2>Project Tasks</h2>
{% if entity.tasks.count > 0 %}
{% include 'BlackRookTaskBundle:Task:_partials/_taskTable.html.twig' with {'tasks': entity.tasks} %}
{% else %}
<p>No tasks</p>
{% endif %}

<form class="delete" action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
     <button type="submit">Delete Project</button>
</form>

{% endblock body %}