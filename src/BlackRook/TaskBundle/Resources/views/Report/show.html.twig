{% extends 'BlackRookTaskBundle::layout.html.twig' %}
{% block body %}
<h1>Report <small>&mdash; <a href="{{ path('report_edit', { 'id': entity.id }) }}">Edit</a></small></h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Facts</th>
            <td>{% debug entity.facts %}</td>
        </tr>
    </tbody>
</table>

<h3>Tasks</h3>
{% include 'BlackRookTaskBundle:Task:_partials/_taskTable.html.twig' with {'tasks': tasks} %}

<form class="delete" action="{{ path('report_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
     <button type="submit">Delete Report</button>
</form>

{% endblock body %}