{% extends 'BlackRookTaskBundle::layout.html.twig' %}
{% block body %}
<h1>Reports  <small>&mdash; <a href="{{ path('report_new') }}">Create</a></small></h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Facts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('report_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{% debug entity.facts %}</td>
            <td>
                <a href="{{ path('report_edit', { 'id': entity.id }) }}">Edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock body %}